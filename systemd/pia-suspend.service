[Unit]
Description=Handle PIA VPN on suspend/resume
Before=sleep.target
StopWhenUnneeded=yes

[Service]
Type=oneshot
RemainAfterExit=yes
# Increased timeout - network can be slow after resume
TimeoutStartSec=120
TimeoutStopSec=120
ExecStart=/bin/bash /usr/local/bin/pia-suspend-handler.sh pre
ExecStop=/bin/bash /usr/local/bin/pia-suspend-handler.sh post
User=root

[Install]
WantedBy=sleep.target
